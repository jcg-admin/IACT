# Anthropic Claude (requerido si usas Claude)
ANTHROPIC_API_KEY=sk-ant-api03-YOUR_KEY_HERE

# OpenAI GPT (requerido si usas GPT)
OPENAI_API_KEY=sk-YOUR_KEY_HERE

# Ollama (local, solo si usas Ollama)
OLLAMA_BASE_URL=http://localhost:11434

# ==========================================
# Cost Optimization Settings
# ==========================================

# Presupuesto mensual en USD (default: 100)
LLM_MONTHLY_BUDGET=100

# Habilitar optimizaci칩n de costos (default: false)
ENABLE_COST_OPTIMIZATION=true

# Proveedor preferido: "auto", "anthropic", "openai", "ollama"
# "auto" detecta autom치ticamente cu치l API key est치 disponible
PREFER_LLM_PROVIDER=auto

# ==========================================
# Environment
# ==========================================

# Valores: "development", "staging", "production"
ENVIRONMENT=development
