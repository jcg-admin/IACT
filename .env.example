# ==========================================
# LLM API Keys Configuration Template
# ==========================================
#
# INSTRUCCIONES:
# 1. Copia este archivo a .env
# 2. Rellena tus API keys reales
# 3. NUNCA commitees el archivo .env
#
# cp .env.example .env
# ==========================================

# Anthropic Claude (requerido si usas Claude)
ANTHROPIC_API_KEY=sk-ant-api03-YOUR_KEY_HERE

# OpenAI GPT (requerido si usas GPT)
OPENAI_API_KEY=sk-YOUR_KEY_HERE

# Ollama (local, solo si usas Ollama)
OLLAMA_BASE_URL=http://localhost:11434

# ==========================================
# Cost Optimization Settings
# ==========================================

# Presupuesto mensual en USD (default: 100)
LLM_MONTHLY_BUDGET=100

# Habilitar optimización de costos (default: false)
ENABLE_COST_OPTIMIZATION=true

# Proveedor preferido: "auto", "anthropic", "openai", "ollama"
# "auto" detecta automáticamente cuál API key está disponible
PREFER_LLM_PROVIDER=auto

# ==========================================
# Environment Configuration
# ==========================================

# Valores: "development", "staging", "production"
ENVIRONMENT=development

# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# --- DEVELOPMENT (VM) ---
# En desarrollo usamos una máquina virtual
DB_VM_HOST=localhost
DB_VM_PORT=5432
DB_VM_NAME=iact_dev
DB_VM_USER=dev_user
DB_VM_PASSWORD=dev_password

# SSH Tunnel para conectarse a VM (opcional)
DB_SSH_TUNNEL=false
DB_SSH_HOST=192.168.1.100
DB_SSH_PORT=22
DB_SSH_USER=vagrant

# --- STAGING ---
DB_STAGING_HOST=staging-db.internal
DB_STAGING_PORT=5432
DB_STAGING_NAME=iact_staging
DB_STAGING_USER=staging_user
DB_STAGING_PASSWORD=CHANGE_ME

# --- PRODUCTION ---
# IMPORTANTE: Usar credenciales directas, NO VM
DB_PROD_HOST=prod-db.example.com
DB_PROD_PORT=5432
DB_PROD_NAME=iact_production
DB_PROD_USER=prod_user
DB_PROD_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DB_PROD_SSL_CA=/path/to/ca-certificate.crt

# ==========================================
# API CONFIGURATION (Backend)
# ==========================================

# --- DEVELOPMENT ---
API_DEV_URL=http://localhost:8000
USE_API_MOCK=false

# --- STAGING ---
API_STAGING_URL=https://staging-api.example.com

# --- PRODUCTION ---
API_PROD_URL=https://api.example.com
API_RATE_LIMIT=100

# ==========================================
# FRONTEND CONFIGURATION
# ==========================================

# --- DEVELOPMENT ---
FRONTEND_DEV_URL=http://localhost:3000
FRONTEND_DEV_PORT=3000

# --- STAGING ---
FRONTEND_STAGING_URL=https://staging.example.com

# --- PRODUCTION ---
FRONTEND_PROD_URL=https://www.example.com

# ==========================================
# REDIS / CACHE CONFIGURATION
# ==========================================

# CACHE_ENABLED: Habilitar cache (default: true)
CACHE_ENABLED=true

# --- DEVELOPMENT ---
# En dev usamos cache en memoria (no requiere Redis)

# --- STAGING ---
REDIS_STAGING_HOST=staging-redis.internal
REDIS_STAGING_PORT=6379

# --- PRODUCTION ---
REDIS_PROD_HOST=prod-redis.example.com
REDIS_PROD_PORT=6379
REDIS_PROD_PASSWORD=CHANGE_ME

# ==========================================
# INFRASTRUCTURE / MONITORING
# ==========================================

# Sentry (error tracking en producción)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# AWS Credentials (si aplica)
AWS_ACCESS_KEY_ID=YOUR_KEY
AWS_SECRET_ACCESS_KEY=YOUR_SECRET
AWS_REGION=us-east-1

# Docker Registry (para CI/CD)
DOCKER_REGISTRY=registry.example.com
DOCKER_USERNAME=deploy_user
DOCKER_PASSWORD=CHANGE_ME

# ==========================================
# FEATURE FLAGS
# ==========================================

# Habilitar/deshabilitar features según ambiente
USE_LLM=true
ENABLE_ANALYTICS=false
ENABLE_EMAIL=false
DEBUG_MODE=true
MOCK_EXTERNAL_APIS=true
