{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["version", "project", "rules", "principles"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+$"
    },
    "project": {
      "type": "string",
      "minLength": 1
    },
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["rule_id", "principle_id", "severity"],
        "properties": {
          "rule_id": {
            "type": "string"
          },
          "principle_id": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "severity": {
            "type": "string",
            "enum": ["error", "warning"]
          },
          "enabled": {
            "type": "boolean"
          }
        }
      }
    },
    "principles": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["principle_id", "name"],
        "properties": {
          "principle_id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        }
      }
    }
  }
}
