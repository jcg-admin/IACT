{
  "save_results": true,
  "output_dir": "output/test_generation",
  "agents": {
    "coverage_analyzer": {
      "min_coverage": 90,
      "threshold_low": 75,
      "comment": "Configuración agresiva - busca 90% de cobertura"
    },
    "test_planner": {
      "max_tests_per_run": 10,
      "comment": "Genera hasta 10 archivos de test por ejecución"
    },
    "llm_generator": {
      "llm_provider": "anthropic",
      "model": "claude-3-5-sonnet-20241022",
      "temperature": 0.3,
      "max_tokens": 4096,
      "comment": "Temperatura baja para código más determinista"
    },
    "syntax_validator": {
      "run_mypy": true,
      "run_ruff": true,
      "run_black": true,
      "comment": "Validación estricta con type checking"
    },
    "test_runner": {
      "timeout": 300,
      "comment": "5 minutos de timeout por archivo"
    },
    "coverage_verifier": {
      "min_coverage_increase": 8.0,
      "allow_regression": false,
      "comment": "Requiere mínimo 8% de incremento"
    },
    "pr_creator": {
      "enabled": true,
      "auto_assign": true,
      "labels": ["bot-generated-tests", "needs-review", "high-priority"]
    }
  }
}
