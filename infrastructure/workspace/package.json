{
  "name": "mcp-workflows-infrastructure",
  "version": "1.0.0",
  "description": "MCP Workflows Infrastructure with VPN/Proxy Agent integration",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "test": "npm run test:python && npm run test:node",
    "test:python": "pytest infrastructure/workspace/tests -v",
    "test:node": "node --test",
    "lint": "npm run lint:python && npm run lint:node",
    "lint:python": "ruff check infrastructure/workspace/ && black --check infrastructure/workspace/",
    "lint:node": "eslint .",
    "format": "npm run format:python && npm run format:node",
    "format:python": "black infrastructure/workspace/",
    "format:node": "prettier --write .",
    "typecheck": "npm run typecheck:python",
    "typecheck:python": "mypy infrastructure/workspace/vpn_proxy_agent",
    "vpn:setup-dev": "codex mcp run setup-dev-environment",
    "vpn:setup-tunnel": "codex mcp run setup-tunnel",
    "vpn:health": "codex mcp run health-check",
    "vpn:stop": "codex mcp run stop-tunnel",
    "mcp:list": "codex mcp list",
    "mcp:validate": "codex mcp validate",
    "mcp:run": "codex mcp run",
    "hamilton:test": "python -m infrastructure.workspace.hamilton_llm.driver",
    "hamilton:visualize": "hamilton-ui"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@modelcontextprotocol/server-stdio": "^0.5.0",
    "codex-mcp": "^1.0.0",
    "zod": "^3.22.4",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.2",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2"
  },
  "keywords": [
    "mcp",
    "workflows",
    "vpn",
    "proxy",
    "ssh",
    "tunnel",
    "hamilton",
    "codex"
  ],
  "author": "Your Team",
  "license": "MIT"
}
