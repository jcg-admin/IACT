# Mantener el final de línea como LF (no cambiar a CRLF)
* text=lf
# Para archivos de script
*.sh text eol=lf

# Para archivos de texto
*.txt text eol=lf

# Para archivos de Python
*.py text eol=lf

# Archivos binarios
*.png binary
*.jpg binary
*.gif binary
*.woff binary
*.ttf binary

# Archivos de Python
*.py text eol=lf

# Archivos de texto
*.txt text eol=lf
*.json text eol=lf
*.md text eol=lf

# Archivos de configuración específicos
*.conf text eol=lf
*.service text eol=lf

# Archivos de requisitos
requirements.txt text eol=lf

# Mantener el final de línea como LF (no cambiar a CRLF)
Vagrantfile text eol=lf
