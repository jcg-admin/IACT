# =============================================================================
# DJANGO CORE CONFIGURATION
# =============================================================================
DJANGO_SETTINGS_MODULE=callcentersite.settings.development
DJANGO_DEBUG=1
DJANGO_SECRET_KEY=desarrollo-inseguro-solo-para-desarrollo
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,*

# =============================================================================
# PYTHON ENVIRONMENT
# =============================================================================
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# =============================================================================
# POSTGRESQL DATABASE (Analytics - Default)
# =============================================================================
# Nombre de la base de datos principal para analítica
DJANGO_DB_NAME=iact_analytics

# Usuario de PostgreSQL
DJANGO_DB_USER=django_user

# Contraseña de PostgreSQL
DJANGO_DB_PASSWORD=django_pass

# Host de PostgreSQL
# - En DevContainer: db_postgres
# - En local con Vagrant: 127.0.0.1
DJANGO_DB_HOST=db_postgres

# Puerto de PostgreSQL
# - En DevContainer: 5432 (interno)
# - En local con Vagrant: 15432 (mapeado al host)
DJANGO_DB_PORT=5432

# Tiempo máximo de vida de las conexiones (segundos)
DJANGO_DB_CONN_MAX_AGE=300

# Timeout de conexión (segundos)
DJANGO_DB_CONNECT_TIMEOUT=10

# =============================================================================
# MARIADB DATABASE (IVR Legacy - READ ONLY)
# =============================================================================
# Nombre de la base de datos legacy de IVR
DJANGO_IVR_NAME=ivr_legacy

# Usuario de MariaDB (mismo que PostgreSQL por convención)
DJANGO_IVR_USER=django_user

# Contraseña de MariaDB
DJANGO_IVR_PASSWORD=django_pass

# Host de MariaDB
# - En DevContainer: db_mariadb
# - En local con Vagrant: 127.0.0.1
DJANGO_IVR_HOST=db_mariadb

# Puerto de MariaDB
# - En DevContainer: 3306 (interno)
# - En local con Vagrant: 13306 (mapeado al host)
DJANGO_IVR_PORT=3306

# Tiempo máximo de vida de las conexiones (segundos)
DJANGO_IVR_CONN_MAX_AGE=300

# =============================================================================
# ETL PIPELINE CONFIGURATION
# =============================================================================
# Frecuencia de ejecución del ETL (horas)
ETL_FREQUENCY_HOURS=6

# Tamaño de lote para procesamiento
ETL_BATCH_SIZE=1000

# Días de retención de datos ETL
ETL_RETENTION_DAYS=730

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Zona horaria de la aplicación
TIME_ZONE=America/Mexico_City

# Código de idioma
LANGUAGE_CODE=es-mx

# =============================================================================
# DEVCONTAINER LIFECYCLE CONTROL
# =============================================================================
# Controla si se instala GitHub Copilot CLI durante post-create
# 0 = No instalar (más rápido), 1 = Instalar
DEVCONTAINER_INSTALL_COPILOT_CLI=0

# Controla si se ejecutan tests durante post-create
# 0 = No ejecutar (más rápido), 1 = Ejecutar
DEVCONTAINER_RUN_TESTS=0

# Controla si se capturan diagnósticos de npm
# 0 = No capturar, 1 = Capturar
DEVCONTAINER_CAPTURE_NPM_DIAGNOSTICS=0

# Controla si npm-diagnostics.sh ejecuta comandos reales o solo simula
# 0 = Ejecutar comandos, 1 = Dry run
DEVCONTAINER_NPM_DIAGNOSTICS_DRY_RUN=0

# =============================================================================
# SECURITY (Production - Commented out for development)
# =============================================================================
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True

# =============================================================================
# LOGGING (Optional)
# =============================================================================
# AUDIT_LOG_RETENTION_DAYS=730
# APPLICATION_LOG_RETENTION_DAYS=30
# ACCESS_LOG_RETENTION_DAYS=90

# =============================================================================
# NOTES
# =============================================================================
# 1. La base de datos 'ivr_readonly' es READ-ONLY
#    - Solo permite operaciones SELECT
#    - Cualquier intento de escritura lanzará un error
#    - Protegida por IVRReadOnlyRouter en database_router.py
#
# 2. Puerto mapping:
#    - DevContainer usa puertos internos (5432, 3306)
#    - Vagrant mapea a puertos del host (15432, 13306)
#
# 3. Para conectarse desde el host en DevContainer:
#    - PostgreSQL: localhost:15432
#    - MariaDB: localhost:13306
#
# 4. Para variables de producción, copie este archivo a 'env'
#    y ajuste los valores según sea necesario
