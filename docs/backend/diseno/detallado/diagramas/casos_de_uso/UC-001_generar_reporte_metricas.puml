@startuml UC-001_generar_reporte_metricas
!define RECTANGLE_BORDER_COLOR #2C3E50
!define USECASE_BACKGROUND_COLOR #ECF0F1
!define ACTOR_BORDER_COLOR #34495E

skinparam actorBorderColor ACTOR_BORDER_COLOR
skinparam usecaseBorderColor RECTANGLE_BORDER_COLOR
skinparam usecaseBackgroundColor USECASE_BACKGROUND_COLOR
skinparam rectangleBorderColor RECTANGLE_BORDER_COLOR

left to right direction

actor "Analista de Negocio" as Analista <<Usuario>>
actor "Sistema IVR" as IVR <<Sistema Externo>>

rectangle "Sistema IACT" {
  usecase "UC-001\nGenerar Reporte\nde Métricas" as UC001
  usecase "UC-001a\nSeleccionar Período" as UC001a
  usecase "UC-001b\nExportar a PDF" as UC001b
  usecase "UC-001c\nEnviar por Email" as UC001c
  usecase "UC-101\nAutenticar Usuario" as UC101

  UC001 .> UC101 : <<include>>
  UC001 .> UC001a : <<include>>
  UC001 .> UC001b : <<extend>>
  UC001 .> UC001c : <<extend>>
}

Analista --> UC001 : solicita
IVR --> UC001 : proporciona datos

note right of UC001
  Actor primario: Analista de Negocio
  Nivel: Usuario
  Prioridad: Alta

  Precondiciones:
  - Usuario autenticado
  - Datos de métricas disponibles

  Postcondición de éxito:
  - Reporte generado y visualizado
end note

note right of UC001b
  Extensión opcional
  Punto de extensión:
  Después de mostrar reporte
end note

note right of UC001c
  Extensión opcional
  Punto de extensión:
  Después de generar PDF
end note

@enduml
