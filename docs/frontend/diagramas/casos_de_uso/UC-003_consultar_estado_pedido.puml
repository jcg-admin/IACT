@startuml UC-003_consultar_estado_pedido
!define RECTANGLE_BORDER_COLOR #2C3E50
!define USECASE_BACKGROUND_COLOR #ECF0F1
!define ACTOR_BORDER_COLOR #34495E

skinparam actorBorderColor ACTOR_BORDER_COLOR
skinparam usecaseBorderColor RECTANGLE_BORDER_COLOR
skinparam usecaseBackgroundColor USECASE_BACKGROUND_COLOR
skinparam rectangleBorderColor RECTANGLE_BORDER_COLOR

left to right direction

actor "Cliente" as Cliente <<Usuario>>
actor "IVR" as IVR <<Sistema>>
actor "Sistema de Envíos" as Envios <<Sistema Externo>>

rectangle "Sistema IACT" {
  usecase "UC-003\nConsultar Estado\nde Pedido" as UC003
  usecase "UC-003a\nValidar Número\nde Pedido" as UC003a
  usecase "UC-003b\nObtener Estado Actual" as UC003b
  usecase "UC-003c\nMostrar Historial" as UC003c
  usecase "UC-003d\nEnviar Notificación\nSMS" as UC003d

  UC003 .> UC003a : <<include>>
  UC003 .> UC003b : <<include>>
  UC003 .> UC003c : <<extend>>
  UC003 .> UC003d : <<extend>>
}

Cliente --> UC003 : consulta
IVR --> UC003 : automatiza consulta
UC003b --> Envios : obtiene tracking

note right of UC003
  Actores primarios:
  - Cliente (autoservicio web)
  - IVR (consulta telefónica)

  Nivel: Usuario
  Prioridad: Media
  Tiempo de respuesta: < 3 segundos
end note

@enduml
