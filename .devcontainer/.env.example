# =============================================================================
# DEVCONTAINER ENVIRONMENT VARIABLES
# =============================================================================
# This file contains example environment variables for the devcontainer.
# Copy this file to .env and update the values as needed.
#
# SECURITY NOTE: Never commit the .env file to version control!
# The .env file is already in .gitignore
# =============================================================================

# =============================================================================
# DJANGO SETTINGS
# =============================================================================
DJANGO_SETTINGS_MODULE=callcentersite.settings.development
DEBUG=True

# Django superuser (for development)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=change_me_admin_password

# =============================================================================
# POSTGRESQL DATABASE (Default Database)
# =============================================================================
POSTGRES_HOST=db_postgres
POSTGRES_PORT=5432
POSTGRES_DB=callcenter_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_me_postgres_password

# PostgreSQL init arguments
POSTGRES_INITDB_ARGS=--encoding=UTF8 --lc-collate=en_US.UTF-8 --lc-ctype=en_US.UTF-8

# =============================================================================
# MARIADB DATABASE (Legacy Database)
# =============================================================================
MARIADB_HOST=db_mariadb
MARIADB_PORT=3306
MARIADB_DATABASE=callcenter_legacy
MARIADB_USER=root
MARIADB_ROOT_PASSWORD=change_me_mariadb_password

# MariaDB character set and collation
MARIADB_CHARACTER_SET_SERVER=utf8mb4
MARIADB_COLLATION_SERVER=utf8mb4_unicode_ci

# =============================================================================
# PYTHON ENVIRONMENT
# =============================================================================
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# =============================================================================
# TIMEZONE
# =============================================================================
TZ=America/Mexico_City
