{
  "name": "IACT Development Container",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "args": {
      "PYTHON_VERSION": "3.12.0",
      "NODE_VERSION": "18.20.0"
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "forwardPorts": [8000, 3000, 5432, 3306],
  "portsAttributes": {
    "8000": {
      "label": "Django Backend",
      "onAutoForward": "notify"
    },
    "3000": {
      "label": "React Frontend",
      "onAutoForward": "notify"
    },
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "silent"
    },
    "3306": {
      "label": "MariaDB",
      "onAutoForward": "silent"
    }
  },
  "containerEnv": {
    "DATABASE_URL": "postgresql://user:password@localhost:5432/iact_db",
    "MARIADB_URL": "mysql://user:password@localhost:3306/iact_maria",
    "NODE_ENV": "development",
    "DJANGO_DEBUG": "True"
  },
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind",
    "source=iact-venv,target=/workspace/.venv,type=volume"
  ],
  "postCreateCommand": "pip install -e . && npm install",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "dbaeumer.vscode-eslint"
      ]
    }
  }
}
